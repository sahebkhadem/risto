# .env.example
# -------------------------
# DO NOT PUT REAL SECRETS HERE. This file contains placeholder keys/example values only.
# Copy this to .env.local and fill real values locally: cp .env.example .env.local

# MongoDB connection string (Prisma needs this)
DATABASE_URL="mongodb+srv://<YOUR_ACTUAL_USERNAME>:<YOUR_ACTUAL_PASSWORD>@<YOUR_CLUSTER>.mongodb.net/<YOUR_DATABASE_NAME>?retryWrites=true&w=majority"

# generate prisma client (reads DATABASE_URL)
npx prisma generate

# push schema to database (dev)
npx prisma db push

# If you use migrations with SQL DBs you'd run `prisma migrate dev` â€” not necessary for Mongo + db push approach


# Email provider / Resend API key
RESEND_API_KEY="resend_api_key_goes_here"

# Base URL used in verification emails / links.
# This is safe to expose and used by client code, so prefix with NEXT_PUBLIC
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Cookie/session settings
# Name of the cookie that stores session token (you can keep as-is)
SESSION_COOKIE_NAME=session_token

# Node environment
NODE_ENV=development
